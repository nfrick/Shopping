@model DataLayer.ProdutoPicklist

@Html.ValidationSummary(true, "", new { @class = "text-danger" })
@Html.HiddenFor(model => model.ID)

<tr>
    <td>
        @Html.EditorFor(model => model.Adicionar, new {htmlAttributes = new {@class = "form-control"}})
        @Html.ValidationMessageFor(model => model.Adicionar, "", new {@class = "text-danger"})
    </td>
    <td>
        <div>
            @Html.EditorFor(model => model.Produto, new { htmlAttributes = new { @class = "form-control", disabled = "disabled", @readonly = "readonly" } })
        </div>
    </td>
    <td>
        @Html.EditorFor(model => model.Categoria, new {htmlAttributes = new {@class = "form-control", disabled = "disabled", @readonly = "readonly"}})
    </td>
    <td>
        @Html.EditorFor(model => model.QtdNormal, new {htmlAttributes = new {@class = "form-control text-right"}})
        @Html.ValidationMessageFor(model => model.QtdNormal, "", new {@class = "text-danger"})
    </td>
    <td>
        @Html.EditorFor(model => model.Unidade, new {htmlAttributes = new {@class = "form-control", disabled = "disabled", @readonly = "readonly"}})
    </td>
</tr>