@model DataLayer.Item

@Html.ValidationSummary(true, "", new { @class = "text-danger" })
<tr>
    @Html.HiddenFor(model => model.ID)
    <td>
        @Html.DropDownListFor(model => model.ProdutoID, null, htmlAttributes: new {style = "max-width:100%", @class = "form-control  checkForDuplicate" })
        @Html.ValidationMessageFor(model => model.ProdutoID, "", new {@class = "text-danger"})
    </td>
    <td>
        @Html.EditorFor(model => model.QtdPrevista, new {htmlAttributes = new {@class = "form-control text-right"}})
        @Html.ValidationMessageFor(model => model.QtdPrevista, "", new {@class = "text-danger"})
    </td>
    <td>
        @Html.EditorFor(model => model.QtdReal, new {htmlAttributes = new {@class = "form-control text-right"}})
        @Html.ValidationMessageFor(model => model.QtdReal, "", new {@class = "text-danger"})
    </td>
    <td>
        @Html.EditorFor(model => model.Preco, new {htmlAttributes = new {@class = "form-control text-right"}})
        @Html.ValidationMessageFor(model => model.Preco, "", new {@class = "text-danger"})
    </td>
    <td>
        @Html.EditorFor(model => model.Subtotal, new {htmlAttributes = new {@class = "form-control text-right", style = "border: 0; background: transparent", disabled = "disabled", @readonly = "readonly"}})
    </td>
    <td>
        @Html.EditorFor(model => model.Marca, new {htmlAttributes = new {@class = "form-control"}})
        @Html.ValidationMessageFor(model => model.Marca, "", new {@class = "text-danger"})
    </td>
</tr>
